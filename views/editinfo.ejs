<%- include('header') %>

<div class="ui grid">
  <div class="four wide column"></div>
  <div class="eight wide column">
    <form class="ui form segment" method="post" enctype="multipart/form-data" action="/user/<%= user._id %>/edit">
      <div class="field required">
        <label>用户名</label><span class="error"></span>
        <input placeholder="用户名" type="text" name="username" value="<%= user.username %>" disabled>
      </div>
      <div class="field required">
        <label>姓名</label><span class="error"></span>
        <input placeholder="姓名" type="text" name="name" value="<%= user.name %>">
      </div>
      <div class="field required">
        <label>学校</label><span class="error"></span>
        <input placeholder="学校" type="text" name="school" value="<%= user.school %>">
      </div>
      <div class="field required">
        <label>职业</label>
        <select class="ui compact selection dropdown" name="gender" disabled>
          <option value="student"<% if (user.identity == 'student'){ %> selected <% } %> >学生</option>
          <option value="teacher"<% if (user.identity == 'teacher'){ %> selected <% } %> >教师</option>
        </select>
      </div>
      <div class="field required">
        <label>个人简介</label>
        <textarea name="bio" rows="5" v-model="user.bio"><%= user.bio %></textarea>
      </div>
      <input type="submit" class="ui button fluid" value="修改">
    </div>
  </form>
</div>

<%- include('footer') %>