<%- include('header') %>

<div class="ui grid">
  <div class="two wide column"></div>
  <div class="eight wide column">
    <%- include('components/usercard') %>
  </div>
</div>

<div class="ui grid">
  <div class="two wide column"></div>
  <div class="twelve wide column">
    <div class="ui secondary pointing menu">
      <% if (author.identity === 'teacher') { %>
      <a class="item active">发布的课程 </a>
      <% if (isUser === true) { %>
      <a class="item">待审核课程 </a>
      <a class="item">待处理消息 </a>
      <% } %>

      <% } else if (author.identity === 'student') { %>
      <a class="item active">加入的课程 </a>
      <% if (isUser === true) { %>
      <a class="item">待处理消息 </a>
      <% } %>
      <% } %>
    </div>
    <div class="ui segment">
      <p></p>
    </div>
  </div>
</div>

<% if (author.identity === 'teacher') { %>
<div class="ui grid">
  <div class="three wide column"></div>
  <div class="nine wide column">
    <div class="ui segment">

      <% if (isUser === true) { %>
      <h1>我发布的课程</h1>
      <% } else { %>
      <h1><%= author.name %>发布的课程</h1>
      <% } %>

    </div>
  </div>
</div>

<% courses.forEach(function (course) { %>
<%- include('components/profile-tch', { course: course }) %>
<% }) %>

<% if (isUser === true) { %>
<div class="ui grid">
  <div class="three wide column"></div>
  <div class="nine wide column">
    <div class="ui segment">
      <h1>未通过审核的课程</h1>
    </div>
  </div>
</div>

<% rejcourses.forEach(function (course) { %>
<%- include('components/profile-tch', { course: course }) %>
<% }) %>
<% } %>

<% } else if (author.identity === 'student') { %>
<div class="ui grid">
  <div class="three wide column"></div>
  <div class="nine wide column">
    <div class="ui segment">

      <% if (isUser === true) { %>
      <h1>我加入的课程</h1>
      <% } else { %>
      <h1><%= author.name %>加入的课程</h1>
      <% } %>

    </div>
  </div>
</div>

<% courses.forEach(function (course) { %>
<%- include('components/profile-stu', { course: course }) %>
<% }) %>

<% } else if (author.identity === 'admin' && isUser) { %>
<h1>未审核课程</h1>
<% courses.forEach(function (course) { %>
<%- include('components/course-summary', { course: course }) %>
<% }) %>
<% } %>

<%- include('footer') %>