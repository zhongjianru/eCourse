<%- include('header') %>

<div class="ui grid">
  <div class="four wide column"></div>
  <div class="eight wide column">
    <% if (!(courses[0] || users[0])) { %>
    暂无搜索结果
    <% } else { %>
    共找到<%= courses.length %>个相关课程：
    <% courses.forEach(function (course) { %>
    <%- include('components/course-summary', { course: course }) %>
    <% }) %>
    <p></p>
    共找到<%= users.length %>个相关用户：
    <% users.forEach(function (user) { %>
    <%- include('components/usercard', { author: user }) %>
    <% }) %>
    <% } %>
  </div>
</div>

<%- include('footer') %>