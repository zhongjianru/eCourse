<div class="nav-setting">
  <% if (user) { %>
  <span><a href="/user/<%= user._id %>" target="_blank"><%= user.name %></a>，欢迎你</span>
  <% } else { %>
  <span>欢迎来到eCourse</span>
  <% } %>

  <div class="ui buttons">
    <div class="ui floating dropdown button">
      <i class="icon bars"></i>
      <div class="menu">
        <% if (user) { %>
          <% if (user.identity == 'teacher') { %>
          <a class="item" href="/course/create">发布课程</a>
          <% } %>

          <a class="item" href="/signout">登出</a>

        <% } else { %>
          <a class="item" href="/signin">登录</a>
          <a class="item" href="/signup">注册</a>
        <% } %>
      </div>
    </div>
  </div>
</div>