<div class="course-content">
  <div class="ui grid">
    <%- include('avatar', { user: course.author }) %>

    <div class="eight wide column">
      <div class="ui segment">
        <h3><a href="/course/<%= course._id %>" target="_blank"><%= course.type %> | <%= course.title %></a></h3>
        <pre><%- course.content %></pre>
        <div>
          <span class="tag"><%= course.created_at %></span>
          <span class="tag right">
            <span>浏览(<%= course.pv %>)</span>
            <span>留言(<%= course.commentsCount %>)</span>
            <span>参与人数(<%= course.attendersCount %>)</span>

          </span>
        </div>
      </div>
    </div>
  </div>
</div>