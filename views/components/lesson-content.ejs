<div class="course-content">
  <div class="ui grid">
    <%- include('avatar', { user: course.author }) %>

    <div class="eight wide column">
      <div class="ui segment">

        <h3>
          <a href="/course/<%= course._id %>/lesson/<%= lesson._id%>" target="_blank">
            第<%= lesson.order %>课时：<%= lesson.title %>
          </a>
        </h3>

        <pre><%- lesson.content %></pre>

        <% if (user && lesson.author._id && user._id.toString() === lesson.author._id.toString()) { %>
        <div class="ui inline dropdown right">
          <i class="setting icon"></i>
          <div class="menu">
            <div class="item"><a href="/course/<%= course._id %>/lesson/<%= lesson._id %>/edit" id="edit">编辑</a></div>
            <div class="item"><button type="button" id="remove"><a>删除</a></button></div>
          </div>
        </div>
        <% } %>

        <br>
      </div>
    </div>
  </div>
</div>

<div class="ui small modal remove">
  <i class="close icon"></i>
  <div class="header">
    确认删除
  </div>
  <div class="image content">
    <div class="image">
      <i class="warning icon"></i>
    </div>
    <div class="description">
      你确定要删除该课程内容吗？
    </div>
  </div>
  <div class="actions">
    <div class="ui button" id="cancel">取消</div>
    <div class="ui button" id="confirm">确认</div>
  </div>
</div>