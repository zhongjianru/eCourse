<div class="course-content">
  <div class="ui grid">
    <div class="one wide column"></div>
    <div class="eleven wide column">
      <a href="/courses?type=文学">全部课程</a>
      <span class="separate">/</span>
      <a href="/courses?type=<%= course.type %>"><%= course.type %></a>
      <span class="separate">/</span>
      <a href="/course/<%= course._id %>"><%= course.title %></a>
      <span class="separate">/</span>
      <a href="/course/<%= course._id %>/lesson/<%= lesson._id%>">第<%= lesson.order %>课时：<%= lesson.title %></a>

      <div class="ui segment">
        <h3>
          <a href="/course/<%= course._id %>/lesson/<%= lesson._id%>" target="_blank">
            第<%= lesson.order %>课时：<%= lesson.title %>
          </a>
        </h3>
        <pre><%- lesson.content %></pre>

        <% if (user && lesson.author._id && user._id.toString() === lesson.author._id.toString()) { %>
        <div class="ui inline dropdown right">
          <i class="setting icon"></i>
          <div class="menu">
            <div class="item"><a href="/course/<%= course._id %>/lesson/<%= lesson._id %>/edit">编辑</a></div>
            <div class="item"><button type="button" id="remove"><a>删除</a></button></div>
          </div>
        </div>
        <% } %>
        <br>
      </div>
    </div>
    <div class="four wide column">
      <%- include('usercard', { author: course.author, isUser: false, isFollow: false }) %>
    </div>
  </div>
</div>

<div class="ui small modal remove">
  <i class="close icon"></i>
  <div class="header">
    确认删除
  </div>
  <div class="image content">
    <div class="image">
      <i class="warning icon"></i>
    </div>
    <div class="description">
      你确定要删除该课程内容吗？
    </div>
  </div>
  <div class="actions">
    <div class="ui button" id="cancel">取消</div>
    <a href="/course/<%= course._id %>/lesson/<%= lesson._id %>/remove" class="ui button clear">确认</a>
  </div>
</div>