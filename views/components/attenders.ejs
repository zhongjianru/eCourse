<div class="ui grid">
  <div class="four wide column"></div>
  <div class="eight wide column">
    <div class="ui segment">
      <div class="ui minimal comments">
        <h3 class="ui dividing header">
          加入该课程的有

          <% if (user) { %>
          <% if (!isAttended[0]) { %>
          <form class="ui reply form" method="post" action="/posts/<%= post._id %>/attend">
            <div class="field">
            </div>
            <input type="submit" class="ui icon button" value="加入课程" />
          </form>
          <% } else { %>
          <form class="ui reply form" method="get" action="/posts/<%= post._id %>/attend/<%= isAttended[0]._id %>/remove">
            <div class="field">
            </div>
            <input type="submit" class="ui icon button" value="退出课程" />
          </form>
          <% } %>
          <% } %>

        </h3>

        <% attendances.forEach(function (attendance) { %>
        <div class="four wide column">
          <a class="avatar"
             target="_blank"
             href="/posts?author=<%= attendance.attender._id %>"
             data-title="<%= attendance.attender.userName %> | <%= ({teacher: '教师', student: '学生'})[attendance.attender.identity] %>"
             data-content="<%= attendance.attender.bio %>">
            <img class="avatar" src="/img/<%= attendance.attender.avatar %>">
          </a>
        </div>
        <% }) %>

      </div>
    </div>
  </div>
</div>