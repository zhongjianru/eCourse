<div class="ui grid">
  <div class="four wide column"></div>
  <div class="eight wide column">
    <div class="ui segment">
      <div class="ui minimal comments">
        <h3 class="ui dividing header">
          加入该课程的有

          <form class="ui reply form" method="post" action="/posts/<%= post._id %>/attend">
            <div class="field">
            </div>
            <input type="submit" class="ui icon button" value="加入课程" />
          </form>

        </h3>

        <% attenders.forEach(function (attender) { %>
        <div class="comment">
            <span class="avatar">
              <img src="/img/<%= attender.attender.avatar %>">
            </span>
        </div>
        <% }) %>

      </div>
    </div>
  </div>
</div>