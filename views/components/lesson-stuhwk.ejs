<div class="course-content">
  <div class="ui grid">
    <div class="four wide column"></div>
    <div class="eight wide column">
      <div class="ui segment minheight">
        <h3 class="ui dividing header">
          提交作业
        </h3>

        <% if(!lessonhwks[0]) { %>
        <p>暂无</p>
        <% } else { %>
        <% lessonhwks.forEach(function (hwk) { %>
        <div class="content">
          <a href="/course/file/<%= hwk.path %>" download="<%= hwk.name %>"><%= hwk.name %></a>

          <% if (user && hwk.author._id && user._id.toString() === hwk.author._id.toString()) { %>
          <div class="actions">
            <a class="reply" href="/course/<%= course._id %>/lesson/<%= lesson._id %>/lessonhwk/<%= hwk._id %>/remove">删除</a>
          </div>
          <% } %>

        </div>
        <% }) %>
        <% } %>

      </div>
    </div>

    <% if (user && user.identity === 'student') { %>
    <div class="four wide column">
      <form class="ui form segment" method="post" enctype="multipart/form-data" action="/course/<%= course._id %>/lesson/<%= lesson._id %>/lessonhwk">
        <div class="field required">
          <label>作业上传</label>
          <input type="file" name="lessonhwk">
        </div>
        <input type="submit" class="ui button fluid" value="上传">
      </form>
    </div>
    <% } %>

  </div>
</div>