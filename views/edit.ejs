<%- include('header') %>

<div class="ui grid">
  <div class="four wide column">
    <a class="avatar"
       href="/posts?author=<%= user._id %>"
       data-title="<%= user.name %> | <%= ({teacher: '教师', student: '学生'})[post.author.identity] %>"
       data-content="<%= user.bio %>">
      <img class="avatar" src="/img/<%= user.avatar %>">
    </a>
  </div>

  <div class="eight wide column">
    <form class="ui form segment" method="post" action="/posts/<%= post._id %>/edit">
      <div class="field required">
        <label>课程类型</label>
        <select name="type" required>
          <option value="文学" <% if (post.type == '文学'){ %> selected <% } %> >文学</option>
          <option value="历史学" <% if (post.type == '历史学'){ %> selected <% } %> >历史学</option>
          <option value="法学" <% if (post.type == '法学'){ %> selected <% } %> >法学</option>
          <option value="经济学" <% if (post.type == '经济学'){ %> selected <% } %> >经济学</option>
          <option value="管理学" <% if (post.type == '管理学'){ %> selected <% } %> >管理学</option>
          <option value="教育学" <% if (post.type == '教育学'){ %> selected <% } %> >教育学</option>
          <option value="理学" <% if (post.type == '理学'){ %> selected <% } %> >理学</option>
          <option value="艺术学" <% if (post.type == '艺术学'){ %> selected <% } %> >艺术学</option>
          <option value="工学" <% if (post.type == '工学'){ %> selected <% } %> >工学</option>
        </select>
      </div>
      <div class="field required">
        <label>课程名称</label>
        <input type="text" name="title" value="<%= post.title %>">
      </div>
      <div class="field required">
        <label>课程简介</label>
        <textarea name="content" rows="15"><%= post.content %></textarea>
      </div>
      <input type="submit" class="ui button" value="发布">
    </div>
  </form>
</div>

<%- include('footer') %>